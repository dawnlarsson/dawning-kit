#!/bin/sh
. script/common

kernel_extract_dir="linux/"
download_artifacts_dir="artifacts/"
keys_dir=$download_artifacts_dir"keys/"
trusted_keys="torvalds@kernel.org gregkh@kernel.org"
kernel_version="6.15.4"
kernel_download="https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-6.15.4.tar.xz"
kernel_pgp="
-----BEGIN PGP SIGNATURE-----
Comment: This signature is for the .tar version of the archive
Comment: git archive --format tar --prefix=linux-6.15.4/ v6.15.4
Comment: git version 2.50.0

iQIzBAABCgAdFiEEZH8oZUiU471FcZm+ONu9yGCSaT4FAmhebx4ACgkQONu9yGCS
aT51LQ/+IBletNzAs1SAUwtPsV3mKuypNQxRXlgZN+vOsuOKwk3Y5dGu1PP2uixt
LeEqv3UkpsqlV8U/INABhWWcqXW4cNZXhT9Tl8lRWEOshwFN57iRQYbUcC/+wCTq
NbQfl0L8WMb5m30EC6Kfr/IsV6SNQ8vR1ySuktPST6iyWlDLHIJ7Dx5ipM8bBQmb
P0/QPbLsw9ISezJTjLA6q0c+8c0SWHJ+YFFbiFJDblgIUm1MlvY80v4plwQAnlDA
F0+7GPl5yBwP/n74Dz9uYmz/05frFlIoBUrrN8DBUSXUQdFjL5GuUOZM5gkxEq9X
kN1jlZeW7MlbV45jNKj18K+Rn6BAUEe3oqZU0UV1Tc8gS6NIael+Aiqz3zeLKgCR
TJ+HsoIXy9QCRu8f9k+/5X5ECsS74M86Y9O9W8blyrrCDCNP/qIh5CGBRxeI5L8F
DaLr7ew+m324yrWKj2niOlJOh3UslDjf4TPpK32cQRXuzVVRdv0Ag3vRmTCKeF9P
L0ojCm+N5h406At7rVNEVH+J1Yq2BpKGxjtg7bXYUPTrZP9saWBktyTANnPAKZtx
gbDBXBK/B7OV0xWBnE8zYegnKaocKh3Rwq92jUrqBRj1tj8euMfl1mxnDnUVVk55
eULyqhc2UtZHSD8rE5GzCsx8gMLtv1w0s/VUo0AEqNfP3yEIoE0=
=4Hyu
-----END PGP SIGNATURE-----
"

kernel_tarball=$download_artifacts_dir"linux-$kernel_version.tar"
kernel_archive=$kernel_tarball".xz"

if [ -d $kernel_extract_dir ]; then
    echo $BOLD "Kernel already extracted..." $RESET
    exit 0
fi

extract_kernel() {
    echo $BOLD "Checking kernel signature" $RESET
    gpg --locate-keys $trusted_keys

    unxz -k $kernel_archive

    echo "$kernel_pgp" >$kernel_tarball".sign"

    gpg --verify $kernel_tarball".sign" $kernel_tarball

    tar -xf $kernel_tarball --strip-components=1 -C $kernel_extract_dir

    rm $kernel_tarball

    echo $BOLD "Kernel extracted to $kernel_extract_dir" $RESET
}

is_file $kernel_archive ||
    curl -L $kernel_download -o $kernel_archive

mkdir -p $download_artifacts_dir
mkdir -p $kernel_extract_dir

extract_kernel
